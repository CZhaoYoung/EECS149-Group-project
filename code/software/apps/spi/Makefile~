#  1: else
TARGET = 1

####################################################
#  INTERFACE_NUMBER
#  0: USE_UART  
#  1: USE_SPI    
#  2: USE_SPI_DRDY
INTERFACE_NUMBER = 1

####################################################
#  HAL_LOG_ENABLED
